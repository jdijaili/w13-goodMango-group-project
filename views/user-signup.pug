extends layout.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action="/users/signup" method="post")
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Username', 'username', user.username)
        +field('Email', 'email', user.email, fieldtype='email')
        +field('Password', 'password', "", fieldtype='password')
        +field('Confirm Password', 'confirmPassword', "", fieldtype='password')
        button(type='submit') Submit
        a(href="/") Cancel
    div
        p: a(href='/users/login') Already have an account?
